extends ../includes/layout

block content
    div.container
        div.row_center
            div.login
                form(method='POST' action='/register' enctype="x-www-form-urlencoded")
                    div.login_title.center_element_row
                        div.ico.circle
                            img.logo(src="https://png.icons8.com/ios/100/000000/sent.png")
                        h1 Welcome Back ! Please login
                    div.login_content
                        label(for="name") FullName
                        input#name.validate(type="text" name="name")

                        label(for="email") E-Mail
                        input#email.validate(type="text" name="email")

                        label(for="bio") Your Bio
                        textarea.materialize-textarea#bio.validate(name="bio")

                        label(for="picture") Picture
                        input#picture.validate(type="text" name="picture")

                        label(for="password") Password
                        input#password.validate(type="password" name="password")

                        button.large(type="submit" name="action") Sign up to Forum
                        hr.divider.right
                        hr.divider.left
                        p.center_element_row Signup via social networks
                        div.center_element_row
                            img(src="https://png.icons8.com/color/100/000000/twitter-squared.png")
                            img(src="https://png.icons8.com/color/100/000000/facebook.png")
                            img(src="https://png.icons8.com/color/100/000000/pinterest.png")
                            img(src="https://png.icons8.com/color/100/000000/linkedin.png")
