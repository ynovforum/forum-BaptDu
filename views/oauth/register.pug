extends ../includes/layout

block content
    link(rel='stylesheet', href='/sass/auth.css')
    include ../includes/navbar

    div.container
        div.row
            div.col.s12
                div.card
                    div.card-content.center.top
                        div.card-title
                            h4 New Member ?
                    div.card-content
                        form(method='POST' action='/register' enctype="x-www-form-urlencoded")
                            div.row
                                div.col.s12
                                    label(for="name") FullName
                                    input#name.validate(type="text" name="name")
                            div.row
                                div.col.s12
                                    label(for="bio") Your Bio
                                    textarea.materialize-textarea#bio.validate(name="bio")
                            div.row
                                div.col.s12
                                    label(for="email") E-Mail
                                    input#email.validate(type="text" name="email")
                            div.row
                                div.col.s12
                                    label(for="picture") Picture
                                    input#picture.validate(type="text" name="picture")
                            div.row
                                div.col.s12
                                    label(for="password") Password
                                    input#password.validate(type="password" name="password")
                            div.row
                                button.btn.waves-effect.waves-light(type="submit" name="action") Submit
